OUT := fortran_test
OBJECTS	:= run_manager_fortran_test.o
 

$(OUT): $(OBJECTS)
	$(FC) $(FFLAGS) $(LFLAGS) $(OBJECTS) $(LIBLDIR) $(LIBS) -o $(OUT)

%.o: %.cpp
	$(CXX) $(CFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.for
	$(FC) $(FFLAGS) $(INCLUDES) $< -c $(input) -o $@

%.o: %.f90
	$(FC) $(FFLAGS) $(INCLUDES) $< -c $(input) -o $@

clean:
	rm $(OBJECTS) $(OUT)
